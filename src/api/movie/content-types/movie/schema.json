{
  "kind": "collectionType",
  "collectionName": "movies",
  "info": {
    "singularName": "movie",
    "pluralName": "movies",
    "displayName": "Movie",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "poster": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "release": {
      "type": "date",
      "default": "2024-10-28",
      "required": true
    },
    "watched": {
      "type": "boolean"
    },
    "rating": {
      "type": "integer",
      "max": 5,
      "min": 1
    },
    "genre": {
      "type": "customField",
      "default": "[]",
      "options": [
        "Action",
        "Anime",
        "Drama",
        "Dokumentär",
        "Fantasy",
        "Komedi",
        "Romantik",
        "Science-Fiction",
        "Skräck",
        "Tecknat",
        "Thriller",
        "Western",
        "Äventyr"
      ],
      "customField": "plugin::multi-select.multi-select"
    }
  }
}
